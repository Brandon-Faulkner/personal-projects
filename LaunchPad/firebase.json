{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects":[
      {
        "source": "/",
        "destination": "/user",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/options",
        "destination": "/options",
        "type": 301
      },
      {
        "source": "/questions",
        "destination": "/questions",
        "type": 301
      },
      {
        "source": "/leaderboard",
        "destination": "/leaderboard",
        "type": 301
      },
      {
        "source": "/user",
        "destination": "/user",
        "type": 301
      }
    ]
  }
}